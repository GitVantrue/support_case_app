[Unit]
Description=AWS Support KB Slack Bot
After=network.target

[Service]
Type=simple
User=ec2-user
WorkingDirectory=/home/ec2-user/slack-bot-final
Environment="PATH=/usr/local/bin:/usr/bin:/bin:/home/ec2-user/.local/bin:/home/ec2-user/.cargo/bin"
EnvironmentFile=/home/ec2-user/slack-bot-final/.env
ExecStart=/usr/bin/python3 /home/ec2-user/slack-bot-final/bot.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
